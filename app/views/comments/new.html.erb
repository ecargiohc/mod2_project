<h3>Add/Create A Comment a Friend's Journey(Log)</h3>

<%= form_for @comment do |f| %>
    <%= f.label ("Log Title:") %>
    <%= collection_select(:comment, :log_id, Log.all, :id, :title) %>
    <br><br>
    <%= f.label ("Your Words of Wisdom:") %>
    <%= f.text_field :entry %>
    <br><br>
    <%= f.submit ("Deliver :)")%>
    <% end %>
    