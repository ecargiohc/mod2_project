<%= link_to "Add New Goal", new_user_goal_path %><br><br>
<%= link_to "Record Your Progress", new_log_path %><br><br>


<% @users_goals.each do |usergoal| %>
    <li>Category: <%= usergoal.goal.category %><br><br>
    Start Date: <%= usergoal.start_date %><br>
    Goal Date: <%= usergoal.goal_date %><br><br>
    Description: <%= usergoal.description %><br><br>
    <%= link_to "Delete?", :user_goal, method: :delete, data: { confirm: "throw in the towel?" } %><br><br></li>
<% end %>

   