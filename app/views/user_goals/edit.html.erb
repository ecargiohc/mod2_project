<h3>Edit Your Goals</h3>

<%= form_for @usergoal do |f| %>
    <% #f.label("Name:") %>
    <% #collection_select(:usergoal, :user_id, UserGoal.all, :id, :category) %>
    <br>
    <%= f.label("Description:") %>
    <%= f.text_field :description %>
    <br>
    <%= f.label("Goal Date:") %>
    <%= f.text_field :goal_date %>
    <br>
    <br>
    <%= f.submit "Save Edit" %>
    <br><br>
    <%= link_to "Delete?", @usergoal, method: :delete, data: { confirm: "give up?" } %>
<% end %>